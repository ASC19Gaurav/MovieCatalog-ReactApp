@model MeetingViewModel

<div class="meeting-registration-form">
    <h2 class="text-center mb-4">Create a Meeting</h2>
    <form asp-action="Create" method="post">
        <label>Meeting Name</label>
        <input type="text" asp-for="Name" required />

        <label>Date</label>
        <input type="date" asp-for="Date" required />

        <label>Start Time</label>
        <input type="time" asp-for="StartTime" required />

        <label>End Time</label>
        <input type="time" asp-for="EndTime" required />

        <label>Description</label>
        <textarea asp-for="Description"></textarea>

        <label>Attendee Emails (comma separated)</label>
        <input type="text" id="attendeeEmails" name="attendeeEmails" />

        <button type="submit">Submit</button>
    </form>
</div>
